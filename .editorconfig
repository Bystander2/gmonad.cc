# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
tab_width = 2
end_of_line = lf
continuation_indent_size = 4 # IntelliJ family IDEs
insert_final_newline = false
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_size = 4
indent_style = tab
